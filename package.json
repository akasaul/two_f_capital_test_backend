{
  "name": "pizza-api",
  "version": "1.0.2",
  "description": "Pizza API for Two f capital Technologies test project",
  "main": "dist/server.js",
  "scripts": {
    "build": "dotenv -e .env -- npx tsc",
    "start": "node dist/server.js",
    "start:debug": "DEBUG=express:* node dist/server.js",
    "dev": "DEBUG=express:* dotenv -e .env.development -- npx ts-node-dev --rs --clear --exit-child src/server.ts",
    "studio:develop": "dotenv -e .env.development -- npx prisma studio",
    "migrate:develop": "dotenv -e .env.development -- npx prisma db push",
    "lint": "npx eslint .",
    "style": "npx prettier --check .",
    "test": "dotenv -e .env.development -- jest -i",
    "test:watch": "dotenv -e .env.development -- jest -i --watch --coverage=false"
  },
  "author": "Nikodimos Jemaeh",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.7.1",
    "prisma": "^4.9.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@casl/prisma": "^1.4.1",
    "@prisma/client": "^4.5.0",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.12",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.3.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.8.2",
    "zod": "^3.23.8",
    "zod-express": "^0.0.8",
    "zod-form-data": "^2.0.2"
  }
}
